<h2>Create a New Film ~here~</h2>

<!-- method is always the request method/http verb -->
<!-- action is ALWAYS the url it needs to go -->
<form action="/films" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="film[title]"/>
  </div>
  <div>
    <label>Year</label>
    <input type="number" name="film[year]"/>
  </div>
  <div>
    <label>Genre</label>
    <input type="text" name="film[genre]"/>
  </div>
  <div>
    <select name="film[director_id]">
      <% @directors.each do |director| %>
        <option value="<%= director.id %>"><%= director.name %></option>
      <% end %>
    </select>
  </div>

    <input type="submit"/>







</form>
