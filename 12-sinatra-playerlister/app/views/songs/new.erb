<h2>~~~~Create a New Song~~~~</h2>

<form action="/songs" method="POST">
  <input type="text" name="song[name]" placeholder="Toxic" />
  <input type="text" name="artist[name]" placeholder="Britney Spears" />
  <% @genres.each do |genre| %>
  <%= genre.name %><input type="checkbox" name="genre_ids[]" value="<%= genre.id %>"/>
  <% end  %>
  <br/>
  <input type="submit" value="CREATE DAT SONG"/>
</form>
